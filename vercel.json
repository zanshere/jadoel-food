{
  "functions": {
    "index.php": {
      "runtime": "vercel-php@0.7.3"
    }
  },
  "routes": [
    { "src": "/public/(.*)",  "dest": "/public/$1" },
    { "src": "/admin/(.*)",   "dest": "/admin/$1" },
    { "src": "/includes/(.*)", "dest": "/includes/$1" },
    { "src": "/src/css/(.*)", "dest": "/src/css/$1" },
    { "src": "/src/js/(.*)",  "dest": "/src/js/$1" },
    { "src": "/assets/images/(.*)", "dest": "/assets/images/$1" },
    { "src": "/(.*)",         "dest": "/index.php" }
  ]
}
